<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/border">
    <ImageView
        android:id="@+id/id_video_passe"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="4dp"
        android:layout_centerVertical="true"
        tools:background="#AAA"/>
    <TextView
        android:id="@+id/id_nom_passe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#1A2524"
        android:layout_marginLeft="50dp"
        android:layout_toRightOf="@id/id_video_passe"
        android:layout_alignTop="@id/id_video_passe"
        android:textStyle="bold"
        tools:text="nom de la Passe" />
    <GridView
        android:id="@+id/id_liste_etoiles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_nom_passe"
        android:layout_toRightOf="@id/id_video_passe"
        android:numColumns="5"
        android:verticalSpacing="2dp"
        android:horizontalSpacing="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:gravity="center">
    </GridView>
</RelativeLayout>