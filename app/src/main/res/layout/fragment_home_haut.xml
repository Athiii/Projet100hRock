<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.athi.rock.HomeHautFragment"
    android:background="@drawable/danse">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home Haut"
        android:layout_centerInParent="true"
        android:id="@+id/textView" />

    <Button
        android:id="@+id/btn_vers_mdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView"
        android:layout_centerHorizontal="true"
        android:onClick="Go"
        android:text="Aller vers Admin" />

    <ImageView
        android:id="@+id/btn_facebook"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_above="@+id/textView"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="14dp"
        android:src="@drawable/facebook_icone" />

    <TextView
        android:id="@+id/id_prochain_rock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/id_prochain_evenement_titre"
        android:layout_below="@+id/textView"
        android:layout_marginStart="13dp"
        android:layout_marginTop="27dp"
        android:text="prochain rock"
        android:textColor="#B71C1C"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/id_prochain_evenement_titre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:layout_marginStart="11dp"
        android:layout_marginTop="87dp"
        android:text="prochaine evenement"
        android:textColor="#B71C1C"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/id_prochain_evenement_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/id_prochain_evenement_titre"
        android:layout_below="@+id/id_prochain_evenement_titre"
        android:layout_marginTop="13dp"
        android:text="prochaine evenement"
        android:textColor="#000"
        android:textSize="20dp"
        android:textStyle="bold" />
    <LinearLayout
        android:id="@+id/id_date_passe"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp">
        <TextView
            android:id="@+id/id_jour_prochaine_evenement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11"
            android:textStyle="bold"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/id_mois_prochaine_evenement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/id_jour_passe"
            android:text="Nov"
            android:textStyle="bold"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/id_annee_prochaine_evenement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/id_mois_passe"
            android:text="2018"
            android:textStyle="bold"
            android:textSize="20dp"/>
    </LinearLayout>


</RelativeLayout>
