<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
   <RelativeLayout
       android:id="@+id/id_presentation"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="52dp">
       <TextView
           android:layout_centerHorizontal="true"
           android:layout_marginLeft="10dp"
           android:textAlignment="center"
           android:id="@+id/description_rock"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textColor="@color/ecriture"
           android:textStyle="bold"
           android:text="Le Rock HEI ouvre ses portes \ntout les mercredis soirs \nau 13 rue de Toul \nde 20h à 22h"/>

       <TextView
           android:layout_centerHorizontal="true"
           android:textAlignment="center"
           android:layout_marginLeft="40dp"
           android:layout_below="@id/description_rock"
           android:id="@+id/prix"
           android:textColor="@color/ecriture"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="1 personne=2€\ncouple=3€ \nabonnement=20€/an"/>
       <ImageView
           android:id="@+id/btn_facebook"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentRight="true"
           android:layout_alignParentTop="true"
           android:src="@mipmap/ic_logo_facebook" />
   </RelativeLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="140dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@mipmap/im_logo_rock_round"
        android:scaleY="2.5"
        android:scaleX="2.5"/>






</RelativeLayout>
