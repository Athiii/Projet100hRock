<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.athi.rock.administrateur.Passe.SupprimerPasseFragment">

    <TextView
        android:layout_marginTop="42dp"
        android:id="@+id/supprimerPasse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Supprimer Passe"
        android:textColor="#B71C1C"
        android:textSize="20dp"
        android:textStyle="bold" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="retour Home"
        android:id="@+id/btn_retour_utilisateur"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/supprimerPasse"/>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/supprimerPasse"
        android:id="@+id/id_listViewPasse_supprimer"
        android:layout_marginBottom="55dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp">
    </ListView>

</RelativeLayout>
