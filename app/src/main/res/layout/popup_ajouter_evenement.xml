<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup_evenement_ajouter_evenement"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/fondClair"
    android:padding="10dp">
    <TextView
        android:id="@+id/popup_text_ajouter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:textColor="@color/colorAccent"
        android:layout_centerHorizontal="true"
        android:text="Voulez vous ajouter: "/>
    <TextView
        android:id="@+id/popup_nom_ajouter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:text="Viens Dans C "
        android:layout_below="@id/popup_text_ajouter"/>
    <TextView
        android:id="@+id/popup_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:textColor="#B71C1C"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:text=" une soirÃ©e merveilleuse, pleine de joie et de bonne humeur"
        android:layout_below="@id/popup_nom_ajouter"/>
    <TextView
        android:id="@+id/popup_adresse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:textColor="#B71C1C"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:text="a Lille"
        android:layout_below="@id/popup_description"/>
    <TextView
        android:id="@+id/popup_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        android:textColor="#B71C1C"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:text="le 30/01/2019"
        android:layout_below="@id/popup_adresse"/>

    <Button
        android:id="@+id/popup_oui"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:background="@color/colorBackgroundList"
        android:text="Oui" />
    <Button
        android:id="@+id/popup_non"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="@color/colorBackgroundList"
        android:text="Annuler" />

</RelativeLayout>