<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/border">
    <LinearLayout
        android:id="@+id/id_date_passe"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp">
        <TextView
            android:id="@+id/id_jour_passe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11"
            android:textStyle="bold"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/id_mois_passe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/id_jour_passe"
            android:text="Nov"
            android:textStyle="bold"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/id_annee_passe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/id_mois_passe"
            android:text="2018"
            android:textStyle="bold"
            android:textSize="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/id_date_passe">
        <TextView
            android:id="@+id/id_nomEvenement_Passe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nom de l'evenement"
            android:layout_marginLeft="50dp"
            android:textStyle="bold"
            android:textColor="#1A23AE"/>
       <!-- <Button
            android:id="@+id/id_btnAlbum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="voir l'album"
            android:textColor="#9E9E9E"
            android:textStyle="italic"
            android:layout_marginLeft="200dp"
            android:onClick="onClickItemPasse"/>-->
    </LinearLayout>
</LinearLayout>